@model UserRoleVM

@{ 
    ViewBag.Title = "Edit Users In Role";
}

<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Add or remove users to '<span>@Model.RoleName</span>' role</h2>
        </div>
        <div class="card-body">
            <input hidden asp-for="@Model.RoleName" />
            @for (int i = 0; i < Model.Users.Count; i++)
            {
                <div class="form-check m-1">
                    <input hidden asp-for="@Model.Users[i].UserId" />
                    <input hidden asp-for="@Model.Users[i].UserName" />
                    <input asp-for="@Model.Users[i].IsSelected" class="form-check-input" />
                    <label asp-for="@Model.Users[i].IsSelected" class="form-check-label">
                        @Model.Users[i].UserName
                    </label>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary" style="width:auto">Update</button>
            <a asp-controller="Administration" asp-action="EditRole" asp-route-id="@Model.RoleId" class="btn btn-primary" style="width:auto">Cancel</a>
        </div>
    </div>
</form>