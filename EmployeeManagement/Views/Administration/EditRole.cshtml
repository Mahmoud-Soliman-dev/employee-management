@model EditRoleVM

@{
    ViewBag.Title = "Edit Role";
}

<h1>Edit Role</h1>

<form method="post" class="mt-3">
    <input hidden asp-for="Id" />
    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="RoleName" class="form-control" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-controller="Administration" asp-action="ListRoles" class="btn btn-primary">Cancel</a>
        </div>
    </div>
    <div class="form-group row">

    </div>
</form>

<div class="card mb-3">
    <div class="card-header">
        Users in this role
    </div>
    <div class="card-body">
        @if (Model.Users.Any())
        {
            foreach (string user in Model.Users)
            {
                <h5 class="card-title">@user</h5>
            }
        }
        else
        {
            <h5 class="card-title">There is no users in this role</h5>
        }
    </div>
    <div class="card-footer">
        <a asp-controller="administration" asp-action="EditUsersInRole" asp-route-roleId="@Model.Id" class="btn btn-primary" style="width: auto">Add Or Remove Users</a>
    </div>
</div>